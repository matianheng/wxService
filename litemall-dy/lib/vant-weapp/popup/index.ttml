<sjs src="../wxs/utils.sjs" module="utils" />

<van-overlay tt:if="{{ overlay }}" show="{{ show }}" z-index="{{ zIndex }}" custom-style="{{ overlayStyle }}" duration="{{ duration }}" bind:click="onClickOverlay" />
<view tt:if="{{ inited }}" class="custom-class {{ classes }} {{ utils.bem('popup', [position, { round, safe: safeAreaInsetBottom, safeTop: safeAreaInsetTop }]) }}" style="z-index: {{ zIndex }}; -webkit-transition-duration:{{ currentDuration }}ms; transition-duration:{{ currentDuration }}ms; {{ display ? '' : 'display: none;' }};{{ customStyle }}" bind:transitionend="onTransitionEnd">
  <slot />
  <van-icon tt:if="{{ closeable }}" name="{{ closeIcon }}" class="van-popup__close-icon van-popup__close-icon--{{ closeIconPosition }}" bind:tap="onClickCloseIcon" />
</view>
